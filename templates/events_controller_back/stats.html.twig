{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <h1 style="display: flex;justify-content: center;">  Statistiques De Type d'evenement </h1>
        <canvas id="menus" width="1000" height="500"></canvas>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha256-t9UJPrESBeG2ojKTIcFLPGF7nHi2vEc7f5A2KpH/UBU=" crossorigin="anonymous"></script>
    <script>
        let menus = document.querySelector("#menus")
        let menuGraph = new Chart(menus, {
            type: "pie",
            data: {
                labels:  ['randonnée', 'camping', 'kayak'],
                datasets: [{
                    label: "Répartition des Evenements",
                    data: [{{ nrndonne }},{{ ncamping }} ,{{ nkayak }}],
                    backgroundColor: ['#FF5733','#008000','#F5F5DC']
                }]
            }
        })
    </script>
{% endblock %}